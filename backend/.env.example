# Decision Points AI Agent System - Environment Variables
# Copy this file to .env and fill in the values for your implementation

# =============================
# API Keys for External Services
# =============================

# Google Gemini API Key
# Create at: https://ai.google.dev/gemini-api/docs/api-key
# Used for: Guide and Action AI Agents (Gemini)
GOOGLE_API_KEY=your_google_api_key_here

# =============================
# E-Commerce Platform APIs
# =============================

# Shopify API Key
# Create at: https://www.shopify.com/partners
# Used for: E-commerce business models implementation
SHOPIFY_API_KEY=your_shopify_api_key_here

# Shopify API Secret
# Available in your Shopify Partner Dashboard
SHOPIFY_API_SECRET=your_shopify_api_secret_here

# =============================
# Payment Processing APIs
# =============================

# Stripe API Key
# Create at: https://dashboard.stripe.com/apikeys
# Used for: Payment processing implementation
STRIPE_API_KEY=your_stripe_api_key_here

# PayPal API Key
# Create at: https://developer.paypal.com/dashboard
# Used for: Alternative payment processing
PAYPAL_API_KEY=your_paypal_api_key_here
PAYPAL_API_SECRET=your_paypal_api_secret_here

# =============================
# Digital Product Platform APIs
# =============================

# Gumroad API Key
# Create at: https://app.gumroad.com/settings/advanced
# Used for: Digital product sales
GUMROAD_API_KEY=your_gumroad_api_key_here

# =============================
# Marketing Automation APIs
# =============================

# MailChimp API Key
# Create at: https://admin.mailchimp.com/account/api/
# Used for: Email marketing automation
MAILCHIMP_API_KEY=your_mailchimp_api_key_here

# SendGrid API Key
# Create at: https://app.sendgrid.com/settings/api_keys
# Used for: Transactional emails and marketing
SENDGRID_API_KEY=your_sendgrid_api_key_here

# =============================
# Web Hosting & Infrastructure
# =============================

# AWS Access Key
# Create at: https://aws.amazon.com/console/
# Used for: Cloud hosting and infrastructure
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# =============================
# Application Configuration
# =============================

# Set this to your preferred logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# =============================
# SaaS/Billing Mode
# =============================
# Set BILLING_REQUIRED to 'true' to enforce Stripe subscription checks (cloud/hosted mode).
# Set to 'false' to disable all subscription enforcement (local/Docker development).
BILLING_REQUIRED=false


# Storage path for Decision Points data (default: ./decision_points_data)
STORAGE_PATH=./decision_points_data

# =============================
# Agent Model Selection
# =============================

# ACTION_AGENT_MODEL specifies the model used by the Action Agent.
# If not set, the system default will be used.
# Example: gemini-pro
ACTION_AGENT_MODEL=

# GUIDE_AGENT_MODEL specifies the model used by the Guide Agent.
# If not set, the system default will be used.
# Example: gemini-pro
GUIDE_AGENT_MODEL=

# ARCHON_AGENT_MODEL specifies the model used by the Archon Agent.
# If not set, the system default will be used.
# Example: gemini-pro
ARCHON_AGENT_MODEL=

# secret key
SECRET_KEY=your_secret_key_here